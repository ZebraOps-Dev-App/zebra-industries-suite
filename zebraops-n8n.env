####################################
# ZebraOps n8n Production Settings #
####################################

# Host settings
N8N_HOST=n8n.zebraindustries.net
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.zebraindustries.net/

# Timezone
GENERIC_TIMEZONE=America/Chicago

# Encryption key for cookie/session
N8N_ENCRYPTION_KEY=changeme-supersecret-zebra-key

# Database
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=postgres
DB_POSTGRESDB_PASSWORD=postgres

# Redis optional for queues
QUEUE_MODE=redis
REDIS_HOST=redis
REDIS_PORT=6379

# Basic Auth (optional)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=zebraops
N8N_BASIC_AUTH_PASSWORD=securezebrapass

# Tunnel fallback
N8N_TUNNEL_SUBDOMAIN=zebraops-dev

# Editor UI
N8N_EDITOR_BASE_URL=https://n8n.zebraindustries.net
N8N_API_URL=https://n8n.zebraindustries.net/

# Telemetry
N8N_DISABLE_PRODUCTION_MAIN_MENU=true
N8N_DIAGNOSTICS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false